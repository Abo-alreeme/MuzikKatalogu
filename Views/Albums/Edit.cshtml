@* Views/Albums/Edit.cshtml *@
@model MuzikKatalogu.Models.Album

@{
    ViewData["Title"] = "Albüm Düzenle";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm" style="background: linear-gradient(135deg, #2a2a3a 0%, #1f1f2e 100%);">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 mb-0 text-white">Albüm Düzenle</h1>
                        <a asp-action="Index" class="btn btn-outline-primary rounded-pill">
                            <i class="fas fa-arrow-left me-2"></i>Listeye Dön
                        </a>
                    </div>

                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="AlbumId" />

                        <div class="form-floating mb-3">
                            <input asp-for="Title" class="form-control" placeholder="Albüm Adı" required />
                            <label asp-for="Title">Albüm Adı</label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="ReleaseDate" class="form-control" type="date" placeholder="Yayın Tarihi" />
                            <label asp-for="ReleaseDate">Yayın Tarihi</label>
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="CoverImageUrl" class="form-control" placeholder="Kapak Resmi URL" />
                            <label asp-for="CoverImageUrl">Kapak Resmi URL</label>
                            <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
                            <div class="form-text text-light-50">Albüm kapağının URL adresini girin.</div>
                        </div>

                        <div class="form-floating mb-4">
                            <select asp-for="ArtistId" class="form-select" asp-items="ViewBag.ArtistId" required>
                                <option value="">Sanatçı Seçin</option>
                            </select>
                            <label asp-for="ArtistId">Sanatçı</label>
                            <span asp-validation-for="ArtistId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Form validation için Bootstrap validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}